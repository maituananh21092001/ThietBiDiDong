<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/duo"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/welcome_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xin chào!"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <Button
        android:id="@+id/income_management_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Quản lý thu nhập"
        android:textColor="@android:color/white"
        android:background="@drawable/button_round_green"
        android:layout_below="@+id/welcome_message"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <Button
        android:id="@+id/income_statistics_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Thống kê thu nhập"
        android:textColor="@android:color/white"
        android:background="@drawable/button_round_green"
        android:layout_below="@+id/income_management_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/alert_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Cảnh báo"
        android:textColor="@android:color/white"
        android:background="@drawable/button_round_green"
        android:layout_below="@+id/income_statistics_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

</RelativeLayout>
